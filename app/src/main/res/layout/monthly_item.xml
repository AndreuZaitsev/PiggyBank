<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

    <ImageView
            android:id="@+id/iv_rect"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_ring"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_expense_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_expense_name"/>

    <TextView
            android:id="@+id/tv_expense_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:textColor="@color/expenses_item_name"
            android:textSize="18sp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:maxEms="6"
            app:layout_constraintBottom_toTopOf="@id/item_divider"
            app:layout_constraintStart_toEndOf="@id/iv_rect"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Expenses" />

    <TextView
            android:id="@+id/item_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:foregroundGravity="center"
            android:textColor="@color/color_pie_value"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/item_divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_expense_name"
            app:layout_constraintEnd_toEndOf="@id/tv_expense_value"
            tools:text="100%" />

    <TextView
            android:id="@+id/tv_expense_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif-medium"
            android:padding="4dp"
            android:textColor="@color/color_pie_value"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/item_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3.00" />

    <View
            android:id="@+id/item_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="@id/tv_expense_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_expense_name" />

</androidx.constraintlayout.widget.ConstraintLayout>